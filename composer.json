{
    "name": "amethyst/authentication",
    "keywords": ["laravel", "amethyst", "amethyst-authentication", "auth"],
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "laravel/passport": "^6.0 || ^7.0",
        "amethyst/core": "0.2.*",
        "amethyst/user": "0.2.*",
        "laravel/socialite": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "orchestra/testbench": "*",
        "duncan3dc/dusk": "^0.8.0",
        "donatj/mock-webserver": "^2.0"
    },
    "autoload": {
        "psr-4" : {
            "Amethyst\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amethyst\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Amethyst\\Providers\\AuthenticationServiceProvider"
            ]
        }
    }
}
